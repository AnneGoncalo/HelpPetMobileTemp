<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:layout_gravity="center_vertical"
    android:padding="15dp"
    tools:context="helppet.com.br.helppetmobile.DetalhesDenunciaActivty">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:text="Título da denúncia"
        android:textSize="25dp"
        android:textStyle="bold"
        android:gravity="center"
        android:textColor="@color/corDenuncia"
        android:id="@+id/tituloDenunciaDescricao"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Tipo da denuncia"
        android:textSize="20dp"
        android:gravity="right"
        android:textColor="@color/corDenuncia"
        android:id="@+id/tipoDenunciaDescricao"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Local"
        android:textSize="20dp"
        android:gravity="right"
        android:textColor="@color/corDenuncia"
        android:id="@+id/localDenunciaDescricao"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:text="Texto completo da denúncia"
        android:textSize="20dp"
        android:gravity="left"
        android:textColor="#000"
        android:id="@+id/descricaoCompletaDenunciaDescricao"/>

</LinearLayout>
